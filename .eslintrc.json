{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": "error",
        "no-eval": "error",
        "no-implied-eval": "error",
        "no-unused-vars": "warn",
        "no-loop-func": "error",
        "no-new-func": "error",
        "no-new": "error",
        "semi": [2,
            "always",
            {
                "omitLastInOneLineBlock": true
            }
        ]
    }
}